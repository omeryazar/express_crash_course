
<h1 class="text center mb-3">{{title}}</h1>




<form class="mb-4">
<div class="form-group">
    <label for="first_name">Customer first name</label>
    <input type="text" name="first_name" value = "{{first_name}}" readonly class="form-control">
    <label for="last_name">Customer last name</label>
    <input type="text" name="last_name" value = "{{last_name}}" readonly class="form-control">
    <label for="email">Customer email</label>
    <input type="email" name="email" value = "{{email}}" readonly  class="form-control">
    <label for="phone">Customer phone</label>
    <input type="text" name="phone" value = "{{phone}}" readonly  class="form-control">
    <label for="permitted">Customer permission status</label>
    <input type="text" name="permitted" value = "{{permitted}}" readonly  class="form-control">
    <label for="segment">Customer segment</label>
    <input type="text" name="segment" value = "{{segment}}" readonly  class="form-control">

    <a href="/" class="btn btn-light mt-4">Home Page</a>
    