
<h1 class="text center mb-3">{{title}}</h1>


<form action="/api/createcustomer" method="POST" class="mb-4">
<div class="form-group">
    <label for="first_name">Enter customer first name</label>
    <input type="text" name="first_name" class="form-control">
    <label for="last_name">Enter customer last name</label>
    <input type="text" name="last_name" class="form-control">
    <label for="email">Enter customer email</label>
    <input type="email" name="email" class="form-control">
    <label for="phone">Enter customer phone</label>
    <input type="text" name="phone" class="form-control">
    <label for="permitted">Enter customer permission status</label>
    <input type="text" name="permitted" class="form-control">
    <label for="segment">Enter customer segment</label>
    <input type="text" name="segment" class="form-control">
    
    </div>
<input type="submit" value="Add Customer" class="btn-primary btn-block">
</form>

